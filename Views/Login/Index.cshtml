
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Giris | Login</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Theme/AdminPanel/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Theme/AdminPanel/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Theme/AdminPanel/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="h1"><b>CARVILLA</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Kullanıcı Girişi</p>

                <form action="@Url.Action("Index", "Login")" method="post">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    else if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <div class="input-group mb-3">
                        @Html.TextBox("kullaniciAdi", null, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.Password("sifre", null, new { @class = "form-control", placeholder = "Şifre" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-14">
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>
                </form>
                <!-- /.social-auth-links -->

                <div class="d-flex justify-content-between">
                    <p class="mb-0">
                        <a href="@Url.Action("SifreSifirla", "Login")">Şifremi Unuttum</a>
                    </p>
                    <p class="mb-0">
                        <a href="@Url.Action("KayitOl", "Login")">Kayıt Ol</a>
                    </p>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Theme/AdminPanel/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Theme/AdminPanel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Theme/AdminPanel/dist/js/adminlte.min.js"></script>
</body>
</html>
