@model IEnumerable<AracSatis.Models.Entities.Kullanici>


@{
    ViewBag.Title = "KullaniciDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<div class="content">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="container-fluid" style="margin-top: 20px;">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kullanıcı Tablosu</h3>
                    </div>
                    <div class="card-body table-responsive p-0" style="height: 300px;">
                        <table class="table table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tcNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ad)
                                        @Html.DisplayNameFor(model => model.soyad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.adres)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.telefon)
                                    </th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tcNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ad)
                                            @Html.DisplayFor(modelItem => item.soyad)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.adres)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.telefon)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Güncelle", "KullaniciGuncelle", new { id = item.kullaniciID }) |
                                            @Html.ActionLink("Sil", "KullaniciSil", new { id = item.kullaniciID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
